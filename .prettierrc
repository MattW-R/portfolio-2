{
    "trailingComma": "all",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "arrowParens": "always",
    "printWidth": 90,
    "plugins": ["prettier-plugin-svelte"],
    "overrides": [
        { "files": "*.svelte", "options": { "parser": "svelte" } },
        {
            "files": ["*.json", "*.css", "*.yml"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
